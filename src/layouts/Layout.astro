---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - BORYS' BLOG</title>
  </head>
  <style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    @layer base {
      * {
        @apply text-text;
      }
      h1 {
        @apply text-6xl;
      }
      h2 {
        @apply text-5xl;
      }
      h3 {
        @apply text-4xl;
      }
      h4 {
        @apply text-3xl;
      }
      h5 {
        @apply text-2xl;
      }
      h6 {
        @apply text-xl;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        @apply font-bold;
      }
      a {
        @apply text-blue-600 underline;
      }
    }
  </style>
  <body class="px-4 lg:px-12 bg-bg">
    <div class="min-h-screen flex flex-col">
      <Navbar />
      <div class="flex-1">
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
