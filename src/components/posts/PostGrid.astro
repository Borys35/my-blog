---
import classNames from "classnames";
import type { Post } from "../../types";
import PostGridItem from "./PostGridItem.astro";

export interface Props {
  cellSize: "sm" | "md" | "lg";
  class?: string;
  posts: Post[];
}

const { cellSize, class: className, posts } = Astro.props;
---

<div
  class={classNames(
    "grid gap-12",
    { "grid-cols-2": cellSize === "lg" },
    { "grid-cols-3": cellSize === "md" },
    { "grid-cols-4": cellSize === "sm" },
    className
  )}
>
  {posts.map((post) => <PostGridItem size={cellSize} {...post} />)}
  <slot />
</div>
